<%= form_for(@user, url: signup_path) do |f| %>
   <% if @user.errors.any? %>
      <div class="row d-flex justify-content-center">
         <div class="card bg-danger" style="color: darkred; opacity: 0.7;">
            <div class="card-header">
               <h2 class="card-title">
                  <%= pluralize(@user.errors.count, "error") %>
                  prohibited this user from being saved:
               </h2>
               <div class="card-body">
                  <ul>
                  <% @user.errors.full_messages.each do |msg| %>
                     <li><%= msg %></li>
                  <% end %>
                  </ul>
               </div>
            </div>
         </div>
      </div>
   <% end %>

   <div style="width: 40rem; margin: 10px;">
      <div class="form-group">
         <%= f.label :username %>
         <%= f.text_field :username, class: "form-control", placeholder: "Enter username" %>
      </div>

      <div class="form-group">
         <%= f.label :email %>
         <%= f.text_field :email, class: "form-control", placeholder: "Enter email" %>
      </div>

      <div class="form-group">
         <input type="submit" class="btn btn-primary btn-block" value="Submit"></input>
      </div>
   </div>
<% end %>