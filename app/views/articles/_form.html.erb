<% if @article.errors.any? %>
<h2>The following errors occurred</h2>
   <ul>
      <% @article.errors.full_messages.each do |msg| %>
         <li><%= msg %></li>
      <% end %>
   </ul>
<% end %>

<%= form_for @article do |f| %>
   <div style="width: 40rem; margin: 10px;">
      <div class="form-group">
         <%= f.label :title %>
         <%= f.text_field :title, class: "form-control", placeholder: "Enter title" %>
      </div>

      <div class="form-group">
         <%= f.label :description %>
         <%= f.text_area :description, class: "form-control", placeholder: "Enter description" %>
      </div>

      <div class="form-group">
         <input type="submit" class="btn btn-primary btn-block" value="Submit"></input>
      </div>

      <a href="/articles" class="btn btn-danger btn-block">Back To Articles</a>
   </div>
<% end %>