<%= form_for @article do |f| %>

   <% if @article.errors.any? %>
      <div class="row d-flex justify-content-center">
         <div class="col-xs-8 col-xs-offset-2">
            <div class="card bg-danger" style="color: darkred; opacity: 0.7;">
            <div class="card-header">
               <h2 class="card-title">
                  <%= pluralize(@article.errors.count, "error") %>
                  prohibited this article from being saved:
               </h2>
               <div class="card-body">
                  <ul>
                  <% @article.errors.full_messages.each do |msg| %>
                     <li><%= msg %></li>
                  <% end %>
                  </ul>
               </div>
            </div>
            </div>
         </div>
      </div>
   <% end %>

   <div style="width: 40rem; margin: 10px;">
      <div class="form-group">
         <%= f.label :title %>
         <%= f.text_field :title, class: "form-control", placeholder: "Enter title" %>
      </div>

      <div class="form-group">
         <%= f.label :description %>
         <%= f.text_area :description, class: "form-control", placeholder: "Enter description" %>
      </div>

      <div class="form-group">
         <input type="submit" class="btn btn-primary btn-block" value="Submit"></input>
      </div>

      <a href="/articles" class="btn btn-danger btn-block">Back To Articles</a>
   </div>
<% end %>